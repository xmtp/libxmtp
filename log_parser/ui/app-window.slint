import {
    Button,
    VerticalBox,
    HorizontalBox,
    ScrollView,
    TabWidget,
} from "std-widgets.slint";

import {
    EpochTab,
    UIContextEntry,
    UIGroupState,
    UIGroupStateDetail,
    UIInstallationCell,
    UIEpochHeader,
    UIInstallationRow,
    UIGroupRow,
} from "epoch-tab.slint";
export { UIContextEntry, UIGroupState, UIGroupStateDetail, UIInstallationCell, UIEpochHeader, UIInstallationRow, UIGroupRow }

import {
    TimelineTab,
    UITimelineEntry,
    UITimelineGroup,
} from "timeline-tab.slint";
export { UITimelineEntry, UITimelineGroup }

import {
    SourcesTab,
    UISource,
} from "sources-tab.slint";
export { UISource }

import { StateDetailPanel } from "state-detail-panel.slint";

// ─── Shared Data Structures ───

export struct UIEvent {
    event: string,
    icon: string,
    inst: string,
    context: [UIContextEntry],
    group-color: color,
    has-group: bool,
}

export struct UIStream {
    inst: string,
    entries: [UIEvent],
}

// ─── Events Tab Components ───

component LogEntryRow inherits Rectangle {
    in property <UIEvent> entry;

    min-height: layout.preferred-height;
    preferred-height: layout.preferred-height;
    horizontal-stretch: 1;
    border-width: 1px;
    border-color: #e0e0e0;
    border-radius: 4px;
    background: #ffffff;

    layout := HorizontalBox {
        spacing: 0px;

        if root.entry.has-group: Rectangle {
            width: 6px;
            background: root.entry.group-color;
        }

        VerticalBox {
            padding: 8px;
            spacing: 2px;
            min-height: ctx-text.preferred-height + min(ctx-flickable.preferred-height, ctx-flickable.max-height) + 2px;

            ctx-text := Text {
                text: root.entry.event;
                font-weight: 600;
                overflow: elide;
                color: #333333;
            }

            ctx-flickable := Flickable {
                vertical-stretch: 1;
                viewport-height: ctx-layout.preferred-height;
                viewport-width: self.width;

                ctx-layout := VerticalLayout {
                    alignment: start;
                    spacing: 2px;
                    width: ctx-flickable.viewport-width;

                    for ctx in root.entry.context: VerticalBox {
                        alignment: LayoutAlignment.start;

                        Text {
                            text: ctx.key + ":";
                            font-size: 11px;
                            color: #888888;
                            font-weight: 500;
                            vertical-alignment: top;
                        }

                        Text {
                            text: ctx.value;
                            font-size: 11px;
                            color: #555555;
                            wrap: word-wrap;
                            horizontal-stretch: 1;
                        }
                    }
                }
            }
        }
    }
}

component LogColumn inherits Rectangle {
    in property <UIStream> log-stream;

    border-width: 1px;
    border-color: #cccccc;
    background: #fafafa;

    VerticalBox {
        padding: 8px;
        spacing: 0px;

        Rectangle {
            height: 40px;
            background: #e8e8e8;
            border-radius: 4px;

            HorizontalBox {
                padding: 8px;

                Text {
                    text: root.log-stream.inst;
                    font-weight: 700;
                    vertical-alignment: center;
                    overflow: elide;
                }

                Text {
                    text: " (" + root.log-stream.entries.length + " events)";
                    font-size: 12px;
                    color: #666666;
                    vertical-alignment: center;
                }
            }
        }

        scroll := Flickable {
            viewport-height: scroll-layout.preferred-height;

            scroll-layout := VerticalLayout {
                alignment: start;
                padding: 4px;
                spacing: 4px;

                for entry in root.log-stream.entries: LogEntryRow {
                    entry: entry;
                }
            }
        }
    }
}

// ─── Main Application Window ───

export component AppWindow inherits Window {
    in-out property <[UIStream]> log-streams: [];
    in-out property <[UIGroupRow]> epoch-groups: [];
    in-out property <[UITimelineGroup]> timeline-groups: [];
    in-out property <[UISource]> sources: [];
    in-out property <int> active-tab: 0;

    // Pagination state
    in-out property <int> events-page: 0;
    in-out property <int> events-total-pages: 1;
    in-out property <int> groups-page: 0;
    in-out property <int> groups-total-pages: 1;

    // Selected state detail (set by Rust when state-clicked callback fires)
    in-out property <UIGroupStateDetail> selected-state-detail;
    in-out property <bool> show-state-detail: false;

    // State detail panel position (for drag and drop)
    in-out property <length> state-detail-panel-x: root.width - 400px - 16px;
    in-out property <length> state-detail-panel-y: root.height - 450px - 16px;

    callback request-open-file();
    callback file-selected(string);
    callback build-log();
    callback state-clicked(/* group-id */ string, /* installation-id */ string, /* unique-id */ int);
    callback close-state-detail();
    callback copy-intermediate(/* text */ string);
    callback remove-source(/* source-name */ string);
    callback events-page-changed(/* page */ int);
    callback groups-page-changed(/* page */ int);

    MenuBar {
        Menu {
            title: "File";
            MenuItem {
                title: "Open";
                activated => {
                    root.request-open-file();
                }
            }
        }

        Menu {
            title: "Tools";
            MenuItem {
                title: "Build Log";
                activated => {
                    root.build-log();
                }
            }
        }
    }

    VerticalBox {
        // Tab bar
        HorizontalBox {
            height: 36px;
            padding-left: 8px;
            padding-right: 8px;
            spacing: 4px;
            alignment: start;

            Rectangle {
                width: events-tab-text.preferred-width + 24px;
                height: 32px;
                background: root.active-tab == 0 ? #4a72c4 : #e0e0e0;
                border-radius: 6px;
                border-bottom-left-radius: 0px;
                border-bottom-right-radius: 0px;

                events-tab-text := Text {
                    text: "Events";
                    font-size: 13px;
                    font-weight: root.active-tab == 0 ? 700 : 400;
                    color: root.active-tab == 0 ? #ffffff : #555555;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.active-tab = 0;
                    }
                }
            }

            Rectangle {
                width: epochs-tab-text.preferred-width + 24px;
                height: 32px;
                background: root.active-tab == 1 ? #4a72c4 : #e0e0e0;
                border-radius: 6px;
                border-bottom-left-radius: 0px;
                border-bottom-right-radius: 0px;

                epochs-tab-text := Text {
                    text: "Epochs";
                    font-size: 13px;
                    font-weight: root.active-tab == 1 ? 700 : 400;
                    color: root.active-tab == 1 ? #ffffff : #555555;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.active-tab = 1;
                    }
                }
            }

            Rectangle {
                width: timeline-tab-text.preferred-width + 24px;
                height: 32px;
                background: root.active-tab == 2 ? #4a72c4 : #e0e0e0;
                border-radius: 6px;
                border-bottom-left-radius: 0px;
                border-bottom-right-radius: 0px;

                timeline-tab-text := Text {
                    text: "Timeline";
                    font-size: 13px;
                    font-weight: root.active-tab == 2 ? 700 : 400;
                    color: root.active-tab == 2 ? #ffffff : #555555;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.active-tab = 2;
                    }
                }
            }

            Rectangle {
                width: sources-tab-text.preferred-width + 24px;
                height: 32px;
                background: root.active-tab == 3 ? #4a72c4 : #e0e0e0;
                border-radius: 6px;
                border-bottom-left-radius: 0px;
                border-bottom-right-radius: 0px;

                sources-tab-text := Text {
                    text: "Sources";
                    font-size: 13px;
                    font-weight: root.active-tab == 3 ? 700 : 400;
                    color: root.active-tab == 3 ? #ffffff : #555555;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.active-tab = 3;
                    }
                }
            }
        }

        // Tab divider line
        Rectangle {
            height: 2px;
            background: #4a72c4;
        }

        // ─── Tab Content ───

        // Events Tab
        if root.active-tab == 0: VerticalBox {
            padding: 0px;
            spacing: 0px;

            // Pagination controls for Events
            if root.events-total-pages > 1: Rectangle {
                height: 40px;
                background: #f0f0f0;
                border-width: 0px;
                border-color: #d0d0d0;

                HorizontalLayout {
                    padding-left: 12px;
                    padding-right: 12px;
                    spacing: 8px;
                    alignment: center;

                    Rectangle {
                        width: prev-events-text.preferred-width + 20px;
                        height: 28px;
                        background: root.events-page > 0 ? (prev-events-touch.has-hover ? #4a72c4 : #5a82d4) : #cccccc;
                        border-radius: 4px;

                        prev-events-text := Text {
                            text: "← Prev";
                            font-size: 12px;
                            font-weight: 600;
                            color: #ffffff;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        prev-events-touch := TouchArea {
                            mouse-cursor: root.events-page > 0 ? pointer : default;
                            clicked => {
                                if root.events-page > 0 {
                                    root.events-page-changed(root.events-page - 1);
                                }
                            }
                        }
                    }

                    Text {
                        text: "Page " + (root.events-page + 1) + " of " + root.events-total-pages;
                        font-size: 12px;
                        font-weight: 500;
                        color: #555555;
                        vertical-alignment: center;
                    }

                    Rectangle {
                        width: next-events-text.preferred-width + 20px;
                        height: 28px;
                        background: root.events-page < root.events-total-pages - 1 ? (next-events-touch.has-hover ? #4a72c4 : #5a82d4) : #cccccc;
                        border-radius: 4px;

                        next-events-text := Text {
                            text: "Next →";
                            font-size: 12px;
                            font-weight: 600;
                            color: #ffffff;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        next-events-touch := TouchArea {
                            mouse-cursor: root.events-page < root.events-total-pages - 1 ? pointer : default;
                            clicked => {
                                if root.events-page < root.events-total-pages - 1 {
                                    root.events-page-changed(root.events-page + 1);
                                }
                            }
                        }
                    }
                }
            }

            HorizontalBox {
                padding: 8px;
                spacing: 8px;

                if root.log-streams.length == 0: Rectangle {
                    background: #f5f5f5;
                    border-radius: 8px;

                    Text {
                        text: "Open a log file to begin";
                        color: #888888;
                        horizontal-alignment: center;
                        vertical-alignment: center;
                    }
                }

                for log-stream in root.log-streams: LogColumn {
                    log-stream: log-stream;
                    min-width: 300px;
                    horizontal-stretch: 1;
                }
            }
        }

        // Epochs Tab
        if root.active-tab == 1: VerticalBox {
            padding: 0px;
            spacing: 0px;

            // Pagination controls for Groups (Epochs tab)
            if root.groups-total-pages > 1: Rectangle {
                height: 40px;
                background: #f0f0f0;

                HorizontalLayout {
                    padding-left: 12px;
                    padding-right: 12px;
                    spacing: 8px;
                    alignment: center;

                    Rectangle {
                        width: prev-groups-text.preferred-width + 20px;
                        height: 28px;
                        background: root.groups-page > 0 ? (prev-groups-touch.has-hover ? #4a72c4 : #5a82d4) : #cccccc;
                        border-radius: 4px;

                        prev-groups-text := Text {
                            text: "← Prev";
                            font-size: 12px;
                            font-weight: 600;
                            color: #ffffff;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        prev-groups-touch := TouchArea {
                            mouse-cursor: root.groups-page > 0 ? pointer : default;
                            clicked => {
                                if root.groups-page > 0 {
                                    root.groups-page-changed(root.groups-page - 1);
                                }
                            }
                        }
                    }

                    Text {
                        text: "Page " + (root.groups-page + 1) + " of " + root.groups-total-pages;
                        font-size: 12px;
                        font-weight: 500;
                        color: #555555;
                        vertical-alignment: center;
                    }

                    Rectangle {
                        width: next-groups-text.preferred-width + 20px;
                        height: 28px;
                        background: root.groups-page < root.groups-total-pages - 1 ? (next-groups-touch.has-hover ? #4a72c4 : #5a82d4) : #cccccc;
                        border-radius: 4px;

                        next-groups-text := Text {
                            text: "Next →";
                            font-size: 12px;
                            font-weight: 600;
                            color: #ffffff;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        next-groups-touch := TouchArea {
                            mouse-cursor: root.groups-page < root.groups-total-pages - 1 ? pointer : default;
                            clicked => {
                                if root.groups-page < root.groups-total-pages - 1 {
                                    root.groups-page-changed(root.groups-page + 1);
                                }
                            }
                        }
                    }
                }
            }

            EpochTab {
                epoch-groups: root.epoch-groups;
                state-clicked(group-id, installation-id, unique-id) => {
                    root.state-clicked(group-id, installation-id, unique-id);
                }
            }
        }

        // Timeline Tab
        if root.active-tab == 2: VerticalBox {
            padding: 0px;
            spacing: 0px;

            // Pagination controls for Timeline (same as groups)
            if root.groups-total-pages > 1: Rectangle {
                height: 40px;
                background: #f0f0f0;

                HorizontalLayout {
                    padding-left: 12px;
                    padding-right: 12px;
                    spacing: 8px;
                    alignment: center;

                    Rectangle {
                        width: prev-timeline-text.preferred-width + 20px;
                        height: 28px;
                        background: root.groups-page > 0 ? (prev-timeline-touch.has-hover ? #4a72c4 : #5a82d4) : #cccccc;
                        border-radius: 4px;

                        prev-timeline-text := Text {
                            text: "← Prev";
                            font-size: 12px;
                            font-weight: 600;
                            color: #ffffff;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        prev-timeline-touch := TouchArea {
                            mouse-cursor: root.groups-page > 0 ? pointer : default;
                            clicked => {
                                if root.groups-page > 0 {
                                    root.groups-page-changed(root.groups-page - 1);
                                }
                            }
                        }
                    }

                    Text {
                        text: "Page " + (root.groups-page + 1) + " of " + root.groups-total-pages;
                        font-size: 12px;
                        font-weight: 500;
                        color: #555555;
                        vertical-alignment: center;
                    }

                    Rectangle {
                        width: next-timeline-text.preferred-width + 20px;
                        height: 28px;
                        background: root.groups-page < root.groups-total-pages - 1 ? (next-timeline-touch.has-hover ? #4a72c4 : #5a82d4) : #cccccc;
                        border-radius: 4px;

                        next-timeline-text := Text {
                            text: "Next →";
                            font-size: 12px;
                            font-weight: 600;
                            color: #ffffff;
                            horizontal-alignment: center;
                            vertical-alignment: center;
                        }

                        next-timeline-touch := TouchArea {
                            mouse-cursor: root.groups-page < root.groups-total-pages - 1 ? pointer : default;
                            clicked => {
                                if root.groups-page < root.groups-total-pages - 1 {
                                    root.groups-page-changed(root.groups-page + 1);
                                }
                            }
                        }
                    }
                }
            }

            TimelineTab {
                timeline-groups: root.timeline-groups;
                entry-clicked(group-id, installation-id, unique-id) => {
                    root.state-clicked(group-id, installation-id, unique-id);
                }
            }
        }

        // Sources Tab
        if root.active-tab == 3: SourcesTab {
            sources: root.sources;
            remove-source(name) => {
                root.remove-source(name);
            }
        }
    }

    // ─── Selected State Detail Panel (floating, draggable) ───
    if root.show-state-detail: StateDetailPanel {
        x: root.state-detail-panel-x;
        y: root.state-detail-panel-y;
        height: min(450px, parent.height - 100px);
        detail: root.selected-state-detail;
        close-requested => {
            root.show-state-detail = false;
            root.close-state-detail();
        }
        copy-intermediate-requested(text) => {
            root.copy-intermediate(text);
        }
        drag-move(delta-x, delta-y) => {
            // Update position with bounds checking
            root.state-detail-panel-x = max(0px, min(root.width - self.width, root.state-detail-panel-x + delta-x));
            root.state-detail-panel-y = max(0px, min(root.height - self.height, root.state-detail-panel-y + delta-y));
        }
    }
}
