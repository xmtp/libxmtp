import {
    Button,
    VerticalBox,
    HorizontalBox,
    ScrollView,
    TabWidget,
} from "std-widgets.slint";

import {
    EpochTab,
    UIContextEntry,
    UIGroupState,
    UIGroupStateDetail,
    UIInstallationCell,
    UIEpochHeader,
    UIInstallationRow,
    UIGroupRow,
} from "epoch-tab.slint";
export { UIContextEntry, UIGroupState, UIGroupStateDetail, UIInstallationCell, UIEpochHeader, UIInstallationRow, UIGroupRow }

// â”€â”€â”€ Shared Data Structures â”€â”€â”€

export struct UIEvent {
    event: string,
    icon: string,
    inst: string,
    context: [UIContextEntry],
    group-color: color,
    has-group: bool,
}

export struct UIStream {
    inst: string,
    entries: [UIEvent],
}

// â”€â”€â”€ Events Tab Components â”€â”€â”€

component LogEntryRow inherits Rectangle {
    in property <UIEvent> entry;

    min-height: layout.preferred-height;
    preferred-height: layout.preferred-height;
    horizontal-stretch: 1;
    border-width: 1px;
    border-color: #e0e0e0;
    border-radius: 4px;
    background: #ffffff;

    layout := HorizontalBox {
        spacing: 0px;

        if root.entry.has-group: Rectangle {
            width: 6px;
            background: root.entry.group-color;
        }

        VerticalBox {
            padding: 8px;
            spacing: 2px;
            min-height: ctx-text.preferred-height + min(ctx-flickable.preferred-height, ctx-flickable.max-height) + 2px;

            ctx-text := Text {
                text: root.entry.event;
                font-weight: 600;
                overflow: elide;
                color: #333333;
            }

            ctx-flickable := Flickable {
                vertical-stretch: 1;
                viewport-height: ctx-layout.preferred-height;
                viewport-width: self.width;

                ctx-layout := VerticalLayout {
                    alignment: start;
                    spacing: 2px;
                    width: ctx-flickable.viewport-width;

                    for ctx in root.entry.context: VerticalBox {
                        alignment: LayoutAlignment.start;

                        Text {
                            text: ctx.key + ":";
                            font-size: 11px;
                            color: #888888;
                            font-weight: 500;
                            vertical-alignment: top;
                        }

                        Text {
                            text: ctx.value;
                            font-size: 11px;
                            color: #555555;
                            wrap: word-wrap;
                            horizontal-stretch: 1;
                        }
                    }
                }
            }
        }
    }
}

component LogColumn inherits Rectangle {
    in property <UIStream> log-stream;

    border-width: 1px;
    border-color: #cccccc;
    background: #fafafa;

    VerticalBox {
        padding: 8px;
        spacing: 0px;

        Rectangle {
            height: 40px;
            background: #e8e8e8;
            border-radius: 4px;

            HorizontalBox {
                padding: 8px;

                Text {
                    text: root.log-stream.inst;
                    font-weight: 700;
                    vertical-alignment: center;
                    overflow: elide;
                }

                Text {
                    text: " (" + root.log-stream.entries.length + " events)";
                    font-size: 12px;
                    color: #666666;
                    vertical-alignment: center;
                }
            }
        }

        scroll := Flickable {
            viewport-height: scroll-layout.preferred-height;

            scroll-layout := VerticalLayout {
                alignment: start;
                padding: 4px;
                spacing: 4px;

                for entry in root.log-stream.entries: LogEntryRow {
                    entry: entry;
                }
            }
        }
    }
}

// â”€â”€â”€ Main Application Window â”€â”€â”€

export component AppWindow inherits Window {
    in-out property <[UIStream]> log-streams: [];
    in-out property <[UIGroupRow]> epoch-groups: [];
    in-out property <int> active-tab: 0;

    // Selected state detail (set by Rust when state-clicked callback fires)
    in-out property <UIGroupStateDetail> selected-state-detail;
    in-out property <bool> show-state-detail: false;

    callback request-open-file();
    callback file-selected(string);
    callback build-log();
    callback state-clicked(/* group-id */ string, /* installation-id */ string, /* unique-id */ int);
    callback close-state-detail();

    MenuBar {
        Menu {
            title: "File";
            MenuItem {
                title: "Open";
                activated => {
                    root.request-open-file();
                }
            }
        }
    }

    VerticalBox {
        // Header bar
        HorizontalBox {
            height: 40px;
            padding: 8px;

            Text {
                text: root.log-streams.length > 0 ? root.log-streams.length + " log stream(s) loaded" : "No files loaded - use File > Open to load a log";
                vertical-alignment: center;
                color: root.log-streams.length > 0 ? #333333 : #888888;
                horizontal-stretch: 1;
            }

            Button {
                text: "Build Log";
                clicked => {
                    root.build-log();
                }
            }
        }

        // Tab bar
        HorizontalBox {
            height: 36px;
            padding-left: 8px;
            padding-right: 8px;
            spacing: 4px;
            alignment: start;

            Rectangle {
                width: events-tab-text.preferred-width + 24px;
                height: 32px;
                background: root.active-tab == 0 ? #4a72c4 : #e0e0e0;
                border-radius: 6px;
                border-bottom-left-radius: 0px;
                border-bottom-right-radius: 0px;

                events-tab-text := Text {
                    text: "Events";
                    font-size: 13px;
                    font-weight: root.active-tab == 0 ? 700 : 400;
                    color: root.active-tab == 0 ? #ffffff : #555555;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.active-tab = 0;
                    }
                }
            }

            Rectangle {
                width: epochs-tab-text.preferred-width + 24px;
                height: 32px;
                background: root.active-tab == 1 ? #4a72c4 : #e0e0e0;
                border-radius: 6px;
                border-bottom-left-radius: 0px;
                border-bottom-right-radius: 0px;

                epochs-tab-text := Text {
                    text: "Epochs";
                    font-size: 13px;
                    font-weight: root.active-tab == 1 ? 700 : 400;
                    color: root.active-tab == 1 ? #ffffff : #555555;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }

                TouchArea {
                    clicked => {
                        root.active-tab = 1;
                    }
                }
            }
        }

        // Tab divider line
        Rectangle {
            height: 2px;
            background: #4a72c4;
        }

        // â”€â”€â”€ Tab Content â”€â”€â”€

        // Events Tab
        if root.active-tab == 0: HorizontalBox {
            padding: 8px;
            spacing: 8px;

            if root.log-streams.length == 0: Rectangle {
                background: #f5f5f5;
                border-radius: 8px;

                Text {
                    text: "Open a log file to begin";
                    color: #888888;
                    horizontal-alignment: center;
                    vertical-alignment: center;
                }
            }

            for log-stream in root.log-streams: LogColumn {
                log-stream: log-stream;
                min-width: 300px;
                horizontal-stretch: 1;
            }
        }

        // Epochs Tab
        if root.active-tab == 1: EpochTab {
            epoch-groups: root.epoch-groups;
            state-clicked(group-id, installation-id, unique-id) => {
                root.state-clicked(group-id, installation-id, unique-id);
            }
        }

        // â”€â”€â”€ Selected State Detail Panel (overlay) â”€â”€â”€
        if root.show-state-detail: Rectangle {
            background: #00000080;

            TouchArea {
                clicked => {
                    root.show-state-detail = false;
                    root.close-state-detail();
                }
            }

            Rectangle {
                x: (parent.width - self.width) / 2;
                y: (parent.height - self.height) / 2;
                width: min(600px, parent.width - 40px);
                height: min(500px, parent.height - 40px);
                background: #ffffff;
                border-radius: 8px;
                drop-shadow-blur: 20px;
                drop-shadow-color: #00000040;

                TouchArea {
                    // Prevent clicks from closing the panel
                }

                VerticalBox {
                    padding: 16px;
                    spacing: 8px;

                    // Header
                    HorizontalBox {
                        spacing: 8px;

                        Text {
                            text: root.selected-state-detail.icon;
                            font-size: 18px;
                            font-weight: 700;
                        }

                        Text {
                            text: root.selected-state-detail.msg;
                            font-size: 16px;
                            font-weight: 700;
                            color: #333333;
                            horizontal-stretch: 1;
                        }

                        Rectangle {
                            width: close-text.preferred-width + 16px;
                            height: 28px;
                            background: close-touch.has-hover ? #e0e0e0 : #f0f0f0;
                            border-radius: 4px;

                            close-text := Text {
                                text: "âœ• Close";
                                font-size: 12px;
                                font-weight: 600;
                                color: #666666;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }

                            close-touch := TouchArea {
                                mouse-cursor: pointer;
                                clicked => {
                                    root.show-state-detail = false;
                                    root.close-state-detail();
                                }
                            }
                        }
                    }

                    // Metadata row
                    HorizontalBox {
                        spacing: 8px;

                        Rectangle {
                            width: line-label.preferred-width + 12px;
                            height: 24px;
                            background: #f0f0f0;
                            border-radius: 4px;

                            line-label := Text {
                                text: "Line: " + root.selected-state-detail.line-number;
                                font-size: 11px;
                                color: #666666;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }

                        if root.selected-state-detail.epoch >= 0: Rectangle {
                            width: epoch-label.preferred-width + 12px;
                            height: 24px;
                            background: #e0f0e0;
                            border-radius: 4px;

                            epoch-label := Text {
                                text: "Epoch: " + root.selected-state-detail.epoch;
                                font-size: 11px;
                                color: #448844;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }

                        if root.selected-state-detail.cursor >= 0: Rectangle {
                            width: cursor-label.preferred-width + 12px;
                            height: 24px;
                            background: #fff0e0;
                            border-radius: 4px;

                            cursor-label := Text {
                                text: "Cursor: " + root.selected-state-detail.cursor;
                                font-size: 11px;
                                color: #886644;
                                horizontal-alignment: center;
                                vertical-alignment: center;
                            }
                        }
                    }

                    // Installation ID
                    HorizontalBox {
                        spacing: 4px;

                        Text {
                            text: "Installation:";
                            font-size: 11px;
                            font-weight: 600;
                            color: #888888;
                        }

                        Text {
                            text: root.selected-state-detail.installation-id;
                            font-size: 11px;
                            color: #444444;
                            font-family: "monospace";
                        }
                    }

                    // Epoch Auth
                    if root.selected-state-detail.epoch-auth != "": HorizontalBox {
                        spacing: 4px;

                        Text {
                            text: "Epoch Auth:";
                            font-size: 11px;
                            font-weight: 600;
                            color: #888888;
                        }

                        Text {
                            text: root.selected-state-detail.epoch-auth;
                            font-size: 11px;
                            color: #444444;
                            font-family: "monospace";
                        }
                    }

                    // Context entries
                    ScrollView {
                        vertical-stretch: 1;

                        VerticalLayout {
                            alignment: start;
                            spacing: 6px;

                            for ctx in root.selected-state-detail.context: Rectangle {
                                background: #f8f8f8;
                                border-radius: 4px;
                                min-height: ctx-inner.preferred-height;

                                ctx-inner := VerticalBox {
                                    padding: 6px;

                                    Text {
                                        text: ctx.key + ":";
                                        font-size: 11px;
                                        font-weight: 600;
                                        color: #666666;
                                    }

                                    Text {
                                        text: ctx.value;
                                        font-size: 11px;
                                        color: #333333;
                                        wrap: word-wrap;
                                    }
                                }
                            }

                            // Problems section
                            if root.selected-state-detail.problems.length > 0: Rectangle {
                                background: #fff5f5;
                                border-radius: 4px;
                                min-height: problems-layout.preferred-height;

                                problems-layout := VerticalBox {
                                    padding: 8px;
                                    spacing: 4px;

                                    Text {
                                        text: "âš  Problems (" + root.selected-state-detail.problems.length + ")";
                                        font-size: 12px;
                                        font-weight: 700;
                                        color: #cc3333;
                                    }

                                    for problem in root.selected-state-detail.problems: Text {
                                        text: "â€¢ " + problem;
                                        font-size: 11px;
                                        color: #993333;
                                        wrap: word-wrap;
                                    }
                                }
                            }

                            // Intermediate logs
                            if root.selected-state-detail.intermediate != "": Rectangle {
                                background: #f5f8ff;
                                border-radius: 4px;
                                min-height: intermediate-layout.preferred-height;

                                intermediate-layout := VerticalBox {
                                    padding: 8px;
                                    spacing: 4px;

                                    Text {
                                        text: "ðŸ“‹ Intermediate Logs";
                                        font-size: 12px;
                                        font-weight: 700;
                                        color: #3355aa;
                                    }

                                    Text {
                                        text: root.selected-state-detail.intermediate;
                                        font-size: 10px;
                                        font-family: "monospace";
                                        color: #444444;
                                        wrap: word-wrap;
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
